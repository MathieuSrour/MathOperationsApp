<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <module name="TreeWalker">
        <module name="JavadocMethod"/> <!-- Ensure methods have Javadoc comments-->
        <module name="WhitespaceAround"/> <!-- Enforce whitespace around operators and keywords for clarity-->
        <module name="UnusedImports"/> <!-- Detect unused imports -->
        <module name="LocalVariableName"/> <!-- Enforce naming conventions for local variables (e.g., camelCase for variables) -->
        <module name="MethodName"/> <!-- Enforce naming conventions for method names (e.g., camelCase for methods) -->

        <module name="Indentation">
            <property name="basicOffset" value="4"/> <!-- Set the basic indentation offset  to 4 spaces -->
            <property name="tabWidth" value="4"/> <!-- Set the tab width to 4 spaces, aligning code properly -->
        </module>
    </module>
</module>
